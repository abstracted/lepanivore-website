{
  "name": "lepanivore-website-backend",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "postinstall": "[[ -n $APP_FOLDER ]] && npm run build && npm run typeorm:migration:run || exit 0",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "npm run start:prod",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lintfix": "npm run lint -- --fix",
    "pretest": "npm run test:cleanArchitecture && npm run lint",
    "pretest:e2e": "rimraf e2e.sqlite",
    "test": "npm run test:cov && npm run test:e2e",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config e2e/jest-e2e.json --runInBand",
    "test:cleanArchitecture": "./tools/check-clean-architecture.sh",
    "test:mutation": "stryker run",
    "pretypeorm": "ts-node -r tsconfig-paths/register database/write-ormconfig-for-migrations.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:migration:run": "npm run typeorm -- migration:run -c schema"
  },
  "dependencies": {
    "@hapi/joi": "17.1.1",
    "@nestjs-modules/mailer": "1.5.0",
    "@nestjs/common": "7.1.0",
    "@nestjs/core": "7.1.0",
    "@nestjs/jwt": "7.0.0",
    "@nestjs/passport": "7.0.0",
    "@nestjs/platform-express": "7.1.0",
    "@nestjs/typeorm": "7.0.1",
    "@sentry/node": "5.15.5",
    "bcrypt": "4.0.1",
    "helmet": "3.22.0",
    "json2csv": "5.0.1",
    "lodash": "4.17.15",
    "nest-raven": "5.0.0",
    "nodemailer": "6.4.6",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "pg": "8.2.1",
    "rimraf": "3.0.2",
    "rxjs": "6.5.5",
    "sqlite3": "4.2.0",
    "typeorm": "0.2.25"
  },
  "devDependencies": {
    "@nestjs/cli": "7.1.5",
    "@nestjs/schematics": "7.0.0",
    "@nestjs/testing": "7.1.0",
    "@stryker-mutator/core": "3.2.4",
    "@stryker-mutator/jest-runner": "3.2.4",
    "@stryker-mutator/typescript": "3.2.4",
    "@types/bcrypt": "3.0.0",
    "@types/express": "4.17.6",
    "@types/hapi__joi": "17.1.0",
    "@types/jest": "25.2.3",
    "@types/json2csv": "5.0.1",
    "@types/lodash": "4.14.152",
    "@types/node": "12.12.42",
    "@types/passport-jwt": "3.0.3",
    "@types/passport-local": "1.0.33",
    "@types/supertest": "2.0.9",
    "jest": "26.0.1",
    "prettier": "2.0.5",
    "supertest": "4.0.2",
    "ts-jest": "26.0.0",
    "ts-loader": "7.0.5",
    "ts-node": "8.10.1",
    "tsc-watch": "4.2.8",
    "tsconfig-paths": "3.9.0",
    "tslint": "6.1.2",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.3.0",
    "typescript": "3.9.3"
  },
  "engines": {
    "node": "~12.16"
  }
}
