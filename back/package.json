{
  "name": "lepanivore-website-backend",
  "version": "0.0.4",
  "private": true,
  "scripts": {
    "postinstall": "[[ -n $APP_FOLDER ]] && npm run build && npm run typeorm:migration:run || exit 0",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "npm run start:prod",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lintfix": "npm run lint -- --fix",
    "pretest": "npm run test:cleanArchitecture && npm run lint",
    "pretest:e2e": "rimraf e2e.sqlite",
    "test": "npm run test:cov && npm run test:e2e",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config e2e/jest-e2e.json --runInBand",
    "test:cleanArchitecture": "./tools/check-clean-architecture.sh",
    "test:mutation": "stryker run",
    "pretypeorm": "ts-node -r tsconfig-paths/register database/write-ormconfig-for-migrations.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:migration:run": "npm run typeorm -- migration:run -c schema"
  },
  "dependencies": {
    "@hapi/joi": "17.1.1",
    "@nestjs-modules/mailer": "1.4.2",
    "@nestjs/common": "7.0.8",
    "@nestjs/core": "7.0.8",
    "@nestjs/platform-express": "7.0.8",
    "@nestjs/typeorm": "7.0.0",
    "helmet": "3.22.0",
    "lodash": "4.17.15",
    "nodemailer": "6.4.6",
    "pg": "8.0.2",
    "rimraf": "3.0.2",
    "rxjs": "6.5.5",
    "sqlite3": "4.1.1",
    "typeorm": "0.2.24"
  },
  "devDependencies": {
    "@nestjs/cli": "7.1.2",
    "@nestjs/schematics": "7.0.0",
    "@nestjs/testing": "7.0.8",
    "@stryker-mutator/core": "3.1.0",
    "@stryker-mutator/html-reporter": "3.1.0",
    "@stryker-mutator/jest-runner": "3.1.0",
    "@stryker-mutator/typescript": "3.1.0",
    "@types/express": "4.17.6",
    "@types/hapi__joi": "16.0.12",
    "@types/jest": "25.2.1",
    "@types/lodash": "4.14.150",
    "@types/node": "12.12.36",
    "@types/supertest": "2.0.8",
    "jest": "25.4.0",
    "prettier": "2.0.4",
    "supertest": "4.0.2",
    "ts-jest": "25.4.0",
    "ts-loader": "6.2.2",
    "ts-node": "8.8.2",
    "tsc-watch": "4.2.3",
    "tsconfig-paths": "3.9.0",
    "tslint": "6.1.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.3.0",
    "typescript": "3.8.3"
  },
  "engines": {
    "node": "~12.16"
  }
}
